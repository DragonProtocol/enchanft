{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true
  },
  "files": ["./typings/cssmodule.d.ts", "./typings/image.d.ts"],
  "exclude": [
    "jest.config.ts",
    "rollup.config.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "dist",
    "**/node_modules/**/*"
  ],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
